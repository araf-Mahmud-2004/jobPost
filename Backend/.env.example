# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/job-portal 

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90
JWT_COOKIE_SECURE=false  # Set to true in production with HTTPS

# Email Configuration (Development - Mailtrap)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_SECURE=false
EMAIL_FROM_NAME="Job Portal"
EMAIL_FROM_ADDRESS=noreply@jobportal.com

# Email Configuration (Production - Example with Gmail)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_specific_password
# EMAIL_SECURE=true
# EMAIL_FROM_NAME="Job Portal"
# EMAIL_FROM_ADDRESS=your_email@gmail.com

# Rate Limiting (for production)
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs

# CORS Configuration (for production)
# CORS_ORIGIN=https://yourfrontend.com
